<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.configUsuario.ConfigUsuarioFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblimagenConfigUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Foto usuario"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imgusuarioCrearConfigUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_launcher_foreground" />

            <Button
                android:id="@+id/btnSubirImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton"
                android:text="Seleccionar imagen"
                android:textColor="#03A9F4" />

            <TextView
                android:id="@+id/lblNombreConfigUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Nombre"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtNombreConfigUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblCorreoConfigUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Correo"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtCorreoConfigUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textEmailAddress" />


            <TextView
                android:id="@+id/lblContrase単aConfigUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Contrase単a"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtContrase単aConfigUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Contrase単a"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/lblFechaNacimientoConfigUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Fecha de Nacimiento"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtFechaNacimientoConfigUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Fecha"
                android:inputType="date" />

            <Button
                android:id="@+id/btnConfigUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/boton"
                android:text="Cambiar datos "
                android:textColor="#03A9F4" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
